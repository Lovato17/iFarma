<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f3ff"
    tools:context=".Produtos">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="432dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnadd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/topo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Produtos"
        android:textColor="#FFF"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="418dp"
        android:layout_height="60dp"
        android:background="#FCB69F"
        android:text="Adicionar ao Carrinho"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="303dp"
        android:layout_height="588dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnadd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.13"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chbxAllegra"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Allegra R$ 10.00" />

            <EditText
                android:id="@+id/edtqtdAllegra"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <ImageView
                android:layout_width="174dp"
                android:layout_height="172dp"
                android:layout_gravity="center"
                android:background="@drawable/allegra" />

            <CheckBox
                android:id="@+id/chbxBuprofeno"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Buprofeno R$ 7.00" />

            <EditText
                android:id="@+id/edtqtdBupofreno"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <ImageView
                android:layout_width="174dp"
                android:layout_height="172dp"
                android:layout_gravity="center"
                android:background="@drawable/buprofeno" />

            <EditText
                android:id="@+id/edtqtdDorflex"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <CheckBox
                android:id="@+id/chbxDorflex"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dorflex R$ 5.00" />

            <ImageView
                android:layout_width="174dp"
                android:layout_height="168dp"
                android:layout_gravity="center"
                android:background="@drawable/dorflex" />

            <EditText
                android:id="@+id/edtqtdEficacia"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <CheckBox
                android:id="@+id/chbxEficacia"
                android:layout_width="161dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:text="Eficacia R$ 15.00" />


            <ImageView
                android:layout_width="174dp"
                android:layout_height="168dp"
                android:layout_gravity="center"
                android:background="@drawable/eficacia" />

            <EditText
                android:id="@+id/edtqtdLoratamed"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <CheckBox
                android:id="@+id/chbxLoratamed"
                android:layout_width="183dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Loratamed R$ 8.00" />

            <ImageView
                android:layout_width="174dp"
                android:layout_height="168dp"
                android:layout_gravity="center"
                android:background="@drawable/loratamed" />

            <EditText
                android:id="@+id/edtqtdLuftal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <CheckBox
                android:id="@+id/chbxLuftal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Luftal R$ 10.00" />

            <ImageView
                android:layout_width="174dp"
                android:layout_height="168dp"
                android:layout_gravity="center"
                android:background="@drawable/luftal" />

            <EditText
                android:id="@+id/edtqtdRitmoneuran"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <CheckBox
                android:id="@+id/chbxRitmoneuran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ritmoneuran R$ 12.00" />

            <ImageView
                android:layout_width="174dp"
                android:layout_height="168dp"
                android:layout_gravity="center"
                android:background="@drawable/ritmoneuran" />

            <EditText
                android:id="@+id/edtqtdSimeticona"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <CheckBox
                android:id="@+id/chbxSimeticona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Simeticona R$ 10.00" />

            <ImageView
                android:layout_width="174dp"
                android:layout_height="168dp"
                android:layout_gravity="center"
                android:background="@drawable/simeticona" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imgfarmadrogasil"
        android:layout_width="90dp"
        android:layout_height="47dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011"
        app:srcCompat="@drawable/drogasil" />

    <ImageView
        android:id="@+id/imgultrafarma"
        android:layout_width="87dp"
        android:layout_height="47dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011"
        app:srcCompat="@drawable/ultrafarma" />

    <ImageView
        android:id="@+id/imgdrogamais"
        android:layout_width="78dp"
        android:layout_height="48dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011"
        app:srcCompat="@drawable/droga_mais" />


</androidx.constraintlayout.widget.ConstraintLayout>