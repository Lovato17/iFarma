<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produtos"
        android:layout_gravity="center"
        android:textSize="30dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="177dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/rdgProdutos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/allegra"
                        android:layout_width="162dp"
                        android:layout_height="wrap_content"
                        android:text="Allegra  R$ 10,00" />

                    <ImageView
                        android:layout_width="174dp"
                        android:layout_height="172dp"
                        android:background="@drawable/allegra" />

                    <RadioButton
                        android:id="@+id/buprofeno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Buprofeno  R$ 7,00" />

                    <ImageView
                        android:layout_width="174dp"
                        android:layout_height="172dp"
                        android:background="@drawable/buprofeno" />


                    <RadioButton
                        android:id="@+id/dorflex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dorflex  R$ 5,00" />

                    <ImageView
                        android:layout_width="174dp"
                        android:layout_height="168dp"
                        android:background="@drawable/dorflex" />

                    <RadioButton
                        android:id="@+id/eficacia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Eficacia  R$ 15,00" />


                    <ImageView
                        android:layout_width="174dp"
                        android:layout_height="168dp"
                        android:background="@drawable/eficacia" />

                    <RadioButton
                        android:id="@+id/loratamed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Loratamed  R$ 8,00" />

                    <ImageView
                        android:layout_width="174dp"
                        android:layout_height="168dp"
                        android:background="@drawable/loratamed" />

                    <RadioButton
                        android:id="@+id/luftal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luftal  R$ 10,00" />

                    <ImageView
                        android:layout_width="174dp"
                        android:layout_height="168dp"
                        android:background="@drawable/luftal" />

                    <RadioButton
                        android:id="@+id/ritmoneuran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ritmoneuran  R$ 12,00" />

                    <ImageView
                        android:layout_width="174dp"
                        android:layout_height="168dp"
                        android:background="@drawable/ritmoneuran" />

                    <RadioButton
                        android:id="@+id/simeticona"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Simeticona  R$ 10,00" />

                    <ImageView
                        android:layout_width="174dp"
                        android:layout_height="168dp"
                        android:background="@drawable/simeticona" />

                </RadioGroup>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="234dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Quantidade"
                android:layout_marginTop="100dp"
                android:textSize="20dp" />

            <NumberPicker
                android:id="@+id/nbpquantidade"
                android:layout_width="117dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="  Total"
                android:layout_marginTop="50dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edttotal"
                android:layout_width="96dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/btnadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"


                android:text="Adicionar ao Carrinho" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>